<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".KayitOl"
    android:id="@+id/kayit_ol_linear">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Olma Sayfası"
        android:textSize="27sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20"
        app:counterTextAppearance="@style/CounterStyle"
        android:layout_marginTop="50dp"
        android:id="@+id/kayit_ol_isim"

        >

        <EditText
            android:layout_width="match_parent"
            android:hint="İsminizi Giriniz"
            android:textColor="@color/KayitOlTextColor"
            android:textSize="17sp"
            android:maxLength="20"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/kayit_ol_editIsim"

            />



    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="35"
        android:layout_marginTop="15dp"
        app:counterTextAppearance="@style/CounterStyle"
        android:id="@+id/kayit_ol_email"

        >

        <EditText
            android:layout_width="match_parent"
            android:hint="E-mailinizi Giriniz"
            android:textColor="@color/KayitOlTextColor"
            android:textSize="17sp"
            android:maxLength="35"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/kayit_ol_editEmail"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20"
        android:layout_marginTop="15dp"
        app:counterTextAppearance="@style/CounterStyle"
        android:id="@+id/kayit_ol_sifre"


        >

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi Giriniz"
            android:textColor="@color/KayitOlTextColor"
            android:textSize="17sp"
            android:maxLength="20"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/kayit_ol_editSifre"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:counterMaxLength="20"
        android:layout_marginTop="15dp"
        app:counterTextAppearance="@style/CounterStyle"
        android:id="@+id/kayit_ol_sifreTekrar"


        >

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifrenizi Onaylayınız"
            android:textColor="@color/KayitOlTextColor"
            android:textSize="17sp"
            android:maxLength="20"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/kayit_ol_editSifreTekrar"


            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="250dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Kayıt ol"
        android:textColor="@color/KayitOlBtnTextColor"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:background="@drawable/kayit_ol"
        android:onClick="btnKayitOl"
        android:layout_height="55dp"/>
</LinearLayout>